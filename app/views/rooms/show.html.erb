<div class="container room-show">
  <div class="row">

    <div class="col-md-8">
      <%= image_tag @room.image.url, alt: "ルーム画像", class: "room-show-image" %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">

          <% if @user.image.blank? %>
            <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg", alt: "ユーザー画像", class: "icon-image host-icon"), root_path %>
          <% else %>
            <%= link_to image_tag(@user.image.url, alt: "ユーザー画像", class: "icon-image host-icon"), root_path %>
          <% end %>  
          
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name">
            <%= @room.name %>
          </p>
          <p class="room-show-profile-address">
            <%= @room.address %>
          </p>
        </div>
      </div>
      <p class="room-show-detile-content">
        <%= @room.introduction %>
      </p>
    </div>

    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon">
          <%= "#{@room.price} / 日" %>
        </h5>
        <div class="room-show-date-select">

          <%= form_with model: @reservations, method: :get, url: new_reservation_path, :multipart => true do |f| %>

            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, required: true, id: "start_date", class: "form-control mb-4" %>

            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, required: true, id: "end_date", class: "form-control mb-4" %>

            <%= f.label :num_person, "人数" %>
            <%= f.number_field :num_person, required: true, min: 1, id: "person_num", class: "form-control mb-4" %>

            <%= f.hidden_field :room_id, value: @room.id, id: "room_id" %>

            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
            
          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>
