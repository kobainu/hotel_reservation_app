<div class="container reservations-new">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="reservations-new-nav">
        <h4 class="reservations-new-check-content">予約内容確認</h4>
        <h5 class="price-icon">
          <%= "#{@room.price} / 日" %>
        </h5>
        <div class="reservations-new-date-select">
          <%= form_with url: reservations_path do |f| %>

            <%= f.label :reservation_end, "開始日" %>
            <%= f.text_field :start_date, value: @reservation.start_date.strftime("%Y-%m-%d"), readonly: true, class: "form-control mb-4" %>

            <%= f.label :reservation_end, "終了日" %>
            <%= f.text_field :end_date, value: @reservation.end_date.strftime("%Y-%m-%d"), readonly: true, class: "form-control mb-4" %>

            <h6 class="reservations-new-check-content">使用日数：<%= @reservation_days %>日</h6>
            <h6 class="reservations-new-check-content">人数：<%= @reservation.num_person %>人</h6>

            <%= f.label :total_price, "合計金額" %>
            <%= f.text_field :total_price, value: "¥ #{@reservation.total_price}", readonly: true, class: "form-control mb-4" %>

            <%= f.hidden_field :room_id, value: @room.id %>
            <% start_date = @reservation.start_date %>
            <% end_date = @reservation.end_date %>
            <% @reservation_days = (end_date - start_date).to_i / 86400 %>
            <%= f.hidden_field :num_person, value: @reservation.num_person %>
            <%= f.hidden_field :total_price, value: (@room.price * @reservation.num_person * @reservation_days) %>

            <p class="reservations-new-check-content">上記内容でよろしければ「予約を確定」を押してください</p>
            <%= f.submit"予約を確定", class: "btn btn-primary form-control my-3" %>
            <%= link_to "ルーム詳細に戻る", room_path(@room.id), class: "btn btn-secondary form-control" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
